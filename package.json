{
    "name": "nest-backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "admin:dev": "nest start admin --watch",
        "user:dev": "nest start user --watch",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/nest-backend/test/jest-e2e.json",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d typeorm-datasource.ts",
        "migration:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create",
        "migration:generate": "npm run typeorm -- migration:generate",
        "migration:run": "npm run typeorm -- migration:run",
        "migration:revert": "npm run typeorm -- migration:revert",
        "seed:run": "ts-node -r tsconfig-paths/register ./node_modules/@jorgebodega/typeorm-seeding/dist/cli -d typeorm-datasource.ts seed database/seeders/*.ts"
    },
    "dependencies": {
        "@jorgebodega/typeorm-seeding": "^6.0.1",
        "@nestjs/common": "^9.2.1",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.2.1",
        "@nestjs/jwt": "^10.0.1",
        "@nestjs/passport": "^9.0.0",
        "@nestjs/platform-express": "^9.2.1",
        "@nestjs/throttler": "^3.1.0",
        "@nestjs/typeorm": "^9.0.1",
        "bcrypt": "^5.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "express-ctx": "^0.1.1",
        "helmet": "^6.0.1",
        "ioredis": "^5.2.4",
        "mysql2": "^3.0.0",
        "nestjs-throttler-storage-redis": "^0.2.2",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.8.0",
        "typeorm": "^0.3.11"
    },
    "devDependencies": {
        "@faker-js/faker": "^7.6.0",
        "@nestjs/cli": "^9.1.8",
        "@nestjs/schematics": "^9.0.4",
        "@nestjs/testing": "^9.2.1",
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.15",
        "@types/jest": "29.2.5",
        "@types/node": "^16.0.0",
        "@types/passport-jwt": "^3.0.8",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.48.1",
        "@typescript-eslint/parser": "^5.48.1",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "29.3.1",
        "prettier": "^2.8.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.3.3",
        "ts-jest": "29.0.4",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.2",
        "typescript": "^4.9.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/"
        ]
    }
}
